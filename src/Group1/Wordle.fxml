<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="mainDisplay" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="625.0" prefWidth="450.0" spacing="10.0" style="-fx-background-color: #1b1b1b;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Group1.wordleController">
   <children>
      <Label text="Wordle" textFill="WHITE">
         <font>
            <Font name="Rockwell Condensed Bold" size="62.0" />
         </font>
         <padding>
            <Insets top="15.0" />
         </padding>
      </Label>
      <Button fx:id="hintButton" mnemonicParsing="false" onAction="#createHint" style="-fx-background-color: GRAY;" text="HINT" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font></Button>
      <Label fx:id="hintLabel" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="guessButton" disable="true" mnemonicParsing="false" onAction="#guess" style="-fx-background-color: GRAY;" text="ENTER" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font></Button>
      <VBox fx:id="userKeys" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <VBox.margin>
                  <Insets bottom="3.0" top="3.0" />
               </VBox.margin></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <VBox.margin>
                  <Insets bottom="3.0" top="3.0" />
               </VBox.margin></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <VBox.margin>
                  <Insets bottom="5.0" top="3.0" />
               </VBox.margin></HBox>
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
      <HBox fx:id="labelBox" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="numGuessesLabel" alignment="CENTER" text="Current Guesses: 0 " textFill="GREY">
               <HBox.margin>
                  <Insets bottom="25.0" left="80.0" top="25.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="averageNumGuessesLabel" alignment="CENTER" text="Average Guesses:  0.0" textFill="GREY">
               <HBox.margin>
                  <Insets left="20.0" top="25.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
          </children>
      </HBox>
      <Button fx:id="playAgainButton" mnemonicParsing="false" style="-fx-background-color: GRAY;" text="Play Again!" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="16.0" />
         </font>
      </Button>
   </children>
</VBox>
